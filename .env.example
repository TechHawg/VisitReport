# RSS Visit Report - Environment Configuration Template
# Copy this to .env and customize for your environment
# NEVER commit .env to version control - add .env to .gitignore

# =====================================
# Application Configuration
# =====================================
NODE_ENV=development
VITE_APP_NAME="RSS Visit Report"
VITE_APP_VERSION=1.0.0

# =====================================
# Server Configuration
# =====================================
VITE_PORT=5173
VITE_HOST=localhost
VITE_HTTPS=false
VITE_OPEN=false

# =====================================
# API Configuration
# =====================================
VITE_API_URL=http://localhost:3001
VITE_API_TIMEOUT=10000

# =====================================
# Authentication Configuration
# =====================================
# Generate secure secrets with: openssl rand -base64 32
JWT_SECRET=YOUR_SECURE_JWT_SECRET_MINIMUM_32_CHARACTERS_REQUIRED
JWT_REFRESH_SECRET=YOUR_SECURE_REFRESH_SECRET_MINIMUM_32_CHARACTERS_REQUIRED
JWT_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# Demo Mode Configuration (Development Only)
VITE_DEMO_USERNAME=demo
VITE_DEMO_PASSWORD=CHANGE_THIS_PASSWORD

# =====================================
# Database Configuration
# =====================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rss_visit_report
DB_USER=rss_user
DB_PASSWORD=YOUR_SECURE_DATABASE_PASSWORD

# =====================================
# Redis Configuration
# =====================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_SECURE_REDIS_PASSWORD

# =====================================
# LDAP/Active Directory Configuration
# =====================================
AD_ENABLED=false
AD_URL=ldap://your-domain-controller:389
AD_DOMAIN=your-domain.com
AD_BASE_DN=DC=your-domain,DC=com
AD_BIND_USER=service-account@your-domain.com
AD_BIND_PASSWORD=YOUR_SECURE_SERVICE_ACCOUNT_PASSWORD

# =====================================
# Email Configuration
# =====================================
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=reports@your-domain.com
SMTP_PASSWORD=YOUR_SECURE_EMAIL_PASSWORD
SMTP_FROM="RSS Reports <reports@your-domain.com>"

# =====================================
# Security Configuration
# =====================================
ENCRYPTION_KEY=YOUR_32_CHARACTER_ENCRYPTION_KEY_HERE
SESSION_SECRET=YOUR_SECURE_SESSION_SECRET_MINIMUM_32_CHARS
CSRF_SECRET=YOUR_SECURE_CSRF_SECRET_MINIMUM_32_CHARS

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =====================================
# File Upload Configuration
# =====================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_DIR=./uploads

# =====================================
# Logging Configuration
# =====================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_DEBUG_LOGGING=false

# =====================================
# Monitoring Configuration
# =====================================
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true
SENTRY_DSN=YOUR_SENTRY_DSN_IF_USING_SENTRY

# =====================================
# Feature Flags
# =====================================
ENABLE_DEMO_MODE=true
ENABLE_OFFLINE_MODE=true
ENABLE_AUTO_SAVE=true

# =====================================
# Security Notes
# =====================================
# 1. Generate secure random secrets using: openssl rand -base64 32
# 2. Use strong passwords for all database connections
# 3. Never commit actual credentials to version control
# 4. Use environment-specific files (.env.development, .env.production)
# 5. Rotate secrets regularly
# 6. Use a secure credential management system in production