# Environment Configuration for RSS Visit Report App

# Application Settings
NODE_ENV=development
PORT=3001
VITE_APP_NAME="RSS Visit Report"
VITE_APP_VERSION=1.0.0

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/rss_visit_reports
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rss_visit_reports
DB_USER=rss_user
DB_PASSWORD=your_secure_password

# Authentication & Security
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_chars
JWT_REFRESH_SECRET=your_refresh_token_secret_key_here
SESSION_SECRET=your_session_secret_key_here
BCRYPT_ROUNDS=12

# Active Directory / LDAP Integration
AD_DOMAIN=your-company.com
AD_URL=ldap://your-ad-server.your-company.com:389
AD_BASE_DN=DC=your-company,DC=com
AD_BIND_USER=service-account@your-company.com
AD_BIND_PASSWORD=service_account_password

# Email Configuration (for report delivery)
SMTP_HOST=smtp.your-company.com
SMTP_PORT=587
SMTP_USER=reports@your-company.com
SMTP_PASSWORD=smtp_password
SMTP_FROM=RSS Reports <reports@your-company.com>

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Security Headers
CORS_ORIGIN=http://localhost:5173,http://localhost:5174
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# PDF Generation
PDF_TIMEOUT=30000
PDF_QUALITY=75

# Feature Flags
ENABLE_AD_AUTH=true
ENABLE_LOCAL_AUTH=true
ENABLE_PDF_EXPORT=true
ENABLE_EMAIL_REPORTS=true
ENABLE_FILE_UPLOAD=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Development/Testing
DEV_MOCK_AUTH=false
DEV_AUTO_LOGIN=false
